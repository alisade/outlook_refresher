{
	"name": "Outlook KeepAlive",
	"version": "1.0",
	"description": "Prevents the annoying logging out from Outlook Web Applications(OWA)",
	"browser_action": {
		"name": "Ooutlook KeepAlive",
		"default_icon":"images/38/refresh_gray.png",
		"default_popup":"popup.html"
	},
	"background":{
		"scripts":["js/background.js"]
	},
	"content_scripts":[{
		"matches":["<all_urls>"],
		"js":["js/content.js"]
	}],
	"permissions": ["tabs", "activeTab", "cookies", "<all_urls>","storage"],
	"manifest_version": 2
}